<%= provide(:update_text, 'Create Account') %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
<%= form_for(@customer) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: 'form-control' %><br><br>

    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: 'form-control' %><br><br>

    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number, class: 'form-control' %><br><br>
    <center>
      <%= f.submit yield(:update_text), class: "btn btn-primary" %><br>
    <center>
<% end %>
  </div>
</div>
